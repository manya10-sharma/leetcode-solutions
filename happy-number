class Solution {
    public boolean isHappy(int n) {
     
 while (n != 1 && n != 4) {
        n = getNext(n);
    }
    return n == 1;
}

private int getNext(int n) {
    int total = 0;
    while (n > 0) {
        int d = n % 10;
        total += d * d;
        n /= 10;
    }
    return total;
    }
    
}