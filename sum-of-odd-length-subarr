class Solution {
    public int sumOddLengthSubarrays(int[] arr) {
       int n = arr.length;
       int totalSum = 0;

       for(int i=0; i<n ; i++){
            int totalSubarr = (i + 1) * (n - i);
            int oddSubarr = (totalSubarr+1)/2;
            totalSum += arr[i]*oddSubarr;
       }
        return totalSum;
    }
}