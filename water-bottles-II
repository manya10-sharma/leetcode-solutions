class Solution {
    public int maxBottlesDrunk(int numBottles, int numExchange) {
         int totalDrank = 0;
        int empty = 0;

        while (numBottles > 0) {
            totalDrank += numBottles;
            empty += numBottles;
            numBottles = 0;
            if (empty >= numExchange) {
                empty -= numExchange;   
                numBottles += 1;       
                numExchange++;        
            } else {
                break;
            }
        }
        return totalDrank;
    }
}